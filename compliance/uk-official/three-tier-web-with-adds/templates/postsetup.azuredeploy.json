{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "domainName": {
      "type": "string",
      "defaultValue": "treyresearch.com",
      "metadata": {
        "description": "AD Domain"
      }
    },
    "domainNetBiosName": {
      "type": "string",
      "defaultValue": "treyresearch",
      "metadata": {
        "description": "AD Domain Net Bios Name"
      }
    },
    "vmAdminUserName": {
      "type": "string",
      "defaultValue": "AdminUser",
      "metadata": {
        "description": "VM Administrator Name"
      }
    },
    "vmAdminPassword": {
      "type": "string",
      "defaultValue": "AweS0me@PW",
      "metadata": {
        "description": "VM Admin Password"
      }
    }
  },
  "variables": {
    "templateBaseUrl": "https://raw.githubusercontent.com/mspnp/template-building-blocks/master/",
    "localRepoBaseUrl": "https://raw.githubusercontent.com/ben-houghton/threetiertemplate/master/",

    "buildingBlocks": {
      "virtualMachineExtensionsTemplate": "[concat(variables('templateBaseUrl'), 'templates/buildingBlocks/virtualMachine-extensions/azuredeploy.json')]"
    },
    "parameterFiles": {
      "azureVmDomainJoinExtensionParametersFile": "[concat(variables('localRepoBaseUrl'), 'parameters/azure/vm-domain-join.parameters.json')]",
      "azureVmEnableWindowsAuthExtensionParametersFile": "[concat(variables('localRepoBaseUrl'), 'parameters/azure/vm-enable-windows-auth.parameters.json')]"
    }
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "domain-join-deployment",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[variables('buildingBlocks').virtualMachineExtensionsTemplate]",
          "contentVersion": "1.0.0.0"
        },
       "parameters": {
          "virtualMachinesExtensionSettings": {
            "value": [
              {
                "vms": [ "operational-web-vm1", "operational-web-vm2", "operational-biz-vm1", "operational-biz-vm2", "operational-data-vm1", "operational-data-vm2", "azure-mgmt-vm1" ],
                "extensions": [
                  {
                    "name": "join-ad-domain",
                    "publisher": "Microsoft.Compute",
                    "type": "JsonADDomainExtension",
                    "typeHandlerVersion": "1.3",
                    "autoUpgradeMinorVersion": true,
                    "settingsConfigMapperUri": "https://raw.githubusercontent.com/mspnp/template-building-blocks/master/templates/resources/Microsoft.Compute/virtualMachines/extensions/vm-extension-passthrough-settings-mapper.json",
                    "settingsConfig": {
                      "Name": "parameters('domainName')",
                      "OUPath": "",
                      "User": "[concat(parameters('domainNetBiosName'),'//', parameters('vmAdminUserName'))]",
                      "Restart": true,
                      "Options": 3
                    },
                    "protectedSettingsConfig": {
                      "Password": "[parameters('vmAdminPassword')]"
                    }
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "windows-auth-deployment",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[variables('buildingBlocks').virtualMachineExtensionsTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "[variables('parameterFiles').azureVmEnableWindowsAuthExtensionParametersFile]",
          "contentVersion": "1.0.0.0"
        }
      }
    }
  ],
  "outputs": {
  }
}

